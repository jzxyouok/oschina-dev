<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/iv_me1_pic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/bear"/>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_me1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="heima程序员"
            android:textColor="#3CA0FF"
            android:textSize="16sp"/>

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_me1_name"
            android:text="更新了动态"
            android:textColor="#B5B5B5"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_me1_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comment"
            android:layout_marginTop="3dp"
            android:text="再回复一下"
            android:textColor="#8E8E8E"
            android:textSize="17sp"/>

        <TextView

            android:id="@+id/tv_me1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="2015-7-19"
            android:textColor="#B5B5B5"
            android:textSize="16sp"/>


        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_me1_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/platform"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android"
                android:textColor="#B5B5B5"
                android:textSize="10sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
