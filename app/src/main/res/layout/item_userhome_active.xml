<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bg_item_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_userhome_face"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:src="@mipmap/widget_dface" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lay_8"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_userhome_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Author Name"
                    android:textColor="@color/spinner_background_press"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_userhome_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="6分钟"
                    android:textColor="#9d9d9d"
                    android:textSize="@dimen/font_12" />
            </LinearLayout >

            <org.mercury.oschina.tweet.widget.TweetTextView
                android:id="@+id/tv_userhome_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新了动态"
                android:textSize="12sp"
                 />

            <org.mercury.oschina.tweet.widget.TweetTextView
                android:id="@+id/tv_userhome_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:text="宝宝不开心"
                android:textColor="#4f4f4f"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_active_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEEEF"
                android:gravity="center_vertical" >

                <org.mercury.oschina.tweet.widget.TweetTextView
                    android:id="@+id/tv_userhome_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    android:padding="5dp"
                    android:text="你还缺经纪人吗"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp" />
            </RelativeLayout >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_userhome_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/platform"
                    android:text="iPhone"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_userhome_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_comment_30"
                    android:layout_alignParentRight="true"
                    android:text="5" />
            </RelativeLayout >
        </LinearLayout >


    </LinearLayout >

</LinearLayout >
